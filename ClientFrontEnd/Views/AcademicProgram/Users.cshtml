<link rel="stylesheet" href="../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sistemdeki Tüm Kullanıcılar</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="userListTbl" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Öğrenci Yetkisi</th>
                            <th>Kontrol Memuru Yetkisi</th>
                            <th>Karar Verme Memuru Yetkisi</th>
                            <th>Admin Yetkisi</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<div class="modal fade" id="updateUserModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kullanıcı Bilgilerini Güncelleyiniz</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <input type="hidden" id="UserNameTxt" />
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <p id="userNameText" class="login-box-msg"></p>
                    <div class="input-group mb-3">
                        <input name="programName" type="text" id="name" class="form-control" placeholder="Adı">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-circle"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input name="faculty" type="text" id="family" class="form-control" placeholder="Soyadı">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-circle"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <div class="form-group">
                            <label for="permApplyDd">Öğrenci Yetkisi</label>
                            <select id="permApply" class="custom-select rounded-0" id="permApplyDd">
                               <option value="1">Var</option>
                                <option value="0">Yok</option>
                            </select>
                        </div>
                    </div>
                     <div class="input-group mb-3">
                        <div class="form-group">
                            <label for="permControlDd">Kontrol Yetkisi</label>
                            <select id="permControl" class="custom-select rounded-0" id="permControlDd">
                                <option value="1">Var</option>
                                <option value="0">Yok</option>
                            </select>
                        </div>
                    </div>
                     <div class="input-group mb-3">
                        <div class="form-group">
                            <label for="permDecisionDd">Karar Verme Yetkisi</label>
                            <select id="permDecision" class="custom-select rounded-0" id="permDecisionDd">
                                <option value="1">Var</option>
                                <option value="0">Yok</option>
                            </select>
                        </div>
                    </div>
                     <div class="input-group mb-3">
                        <div class="form-group">
                            <label for="permAdminDd">Admin Yetkisi</label>
                            <select id="permAdmin" class="custom-select rounded-0" id="permAdminDd">
                                 <option value="1">Var</option>
                                <option value="0">Yok</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
                <button type="button" id="btnUpdateUser" class="btn btn-primary">Güncelle</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
